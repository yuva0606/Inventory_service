apiVersion: apps/v1
kind: Deployment
metadata:
  name: mysql-inventory-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: inventory-db
  template:
    metadata:
      labels:
        app: inventory-db
    spec:
      containers:
        - name: mysql
          image: mysql:5.7

          env:
            - name: MYSQL_ROOT_PASSWORD
              value: root
            - name: MYSQL_DATABASE
              value: inventorydb
          ports:
            - containerPort: 3306
---
apiVersion: v1
kind: Service
metadata:
  name: mysql-inventory-service
spec:
  ports:
    - port: 3306
      targetPort: 3306
  selector:
    app: mysql
